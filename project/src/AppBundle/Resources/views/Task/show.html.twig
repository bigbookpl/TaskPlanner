<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Task Planner{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    {% block javascripts %}
        <script src="{{ asset('bundles/framework/js/jquery-3.1.1.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/framework/js/bootstrap.js') }}" type="text/javascript"></script>
        {#<script src="{{ asset('bundles/framework/js/app.js') }}" type="text/javascript"></script>#}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{% block body %}
{% if task %} <table>
    <h3>New task added!</h3>
    <tr><th><label> Name:</th>
    <td>{{ task.name }}</td></label></tr>
    <tr><th><label> Description:</th><td> {{ task.description }}</td></label></tr><br>
    <tr><th><label> Priority: </th><td>{{ task.priority }}</td></label></tr><br>
    <tr><th><label> Category: </th><td>{{ task.category }}</td></label></tr><br>
    <tr><th><label> Term: </th><td>{{ task.term | date }}</td></label></tr>
</table>
    {% else %}
    <h3>Error with adding task</h3>
    {% endif %}

<br><br>

    <div class="col-md-10"><a href="/login">Login</a><br><a href="register">register</a></div>

{% endblock %}

</body>
</html>
